<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_tmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="8dp"
            android:drawableTop="@drawable/home_top_01"
            android:gravity="center"
            android:text="@string/home_tmall"
            android:textColor="@color/font_second_color"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_suan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="8dp"
            android:drawableTop="@drawable/home_top_02"
            android:gravity="center"
            android:text="@string/home_suan"
            android:textColor="@color/font_second_color"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_global"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="8dp"
            android:drawableTop="@drawable/home_top_03"
            android:gravity="center"
            android:text="@string/home_global"
            android:textColor="@color/font_second_color"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_wai"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="8dp"
            android:drawableTop="@drawable/home_top_04"
            android:gravity="center"
            android:text="@string/home_wai"
            android:textColor="@color/font_second_color"
            android:textSize="12sp" />

    </LinearLayout>

</LinearLayout>
