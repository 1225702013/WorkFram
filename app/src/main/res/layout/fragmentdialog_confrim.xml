<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:psd="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        psd:layout_constraintBottom_toBottomOf="parent"
        psd:layout_constraintEnd_toEndOf="parent"
        psd:layout_constraintStart_toStartOf="parent"
        psd:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="请输入支付密码："
                android:textSize="24sp" />

            <com.smile.taobaodemo.model.entity.PayPsdInputView
                android:id="@+id/pay_password"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="686dp"
                android:inputType="number"
                android:textSize="12sp"
                psd:layout_constraintBottom_toBottomOf="parent"
                psd:layout_constraintEnd_toEndOf="parent"
                psd:layout_constraintStart_toStartOf="parent"
                psd:layout_constraintTop_toTopOf="parent"
                psd:maxCount="6"
                psd:psdType="weChat"
                psd:rectAngle="5dp" />
        </LinearLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>