<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="15dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        app:cardCornerRadius="5dp"
        app:cardElevation="3dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true">

        <ImageView
            android:id="@+id/seed_img"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:scaleType="centerCrop"
            android:src="@android:drawable/sym_def_app_icon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="125dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/seed_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="种子名称"
                android:textColor="#181818"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/seed_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="种植面积" />

            <TextView
                android:id="@+id/seed_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="剩余成熟天数"
                android:textColor="@color/default_line_indicator_unselected_color"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/seed_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="播种时间"
                android:textColor="#181818"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/seed_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="当前状态"
                    android:textColor="@color/colorBottomNavigationNotification"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/seed_objectId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="TextView"
                    android:visibility="invisible" />

                <Button
                    android:id="@+id/reap"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="0"
                    android:background="@drawable/shape"
                    android:text="收获"
                    android:textColor="@color/font_black_color"
                    android:typeface="normal"
                    android:visibility="gone" />
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>