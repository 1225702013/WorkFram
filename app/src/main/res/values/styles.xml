    <!--</style>-->

    <!--白天主题-->
    <style name="dayTheme" parent="AppTheme">
        <item name="android:textColor">#525252</item>
        <item name="android:background">#f7f7f7</item>
    </style>

    <!--夜间主题-->
    <style name="nightTheme" parent="AppTheme">
        <item name="android:textColor">#868a96</item>
        <item name="android:background">#1e1e2a </item>
    </style>


    <style name="rating_bar_result" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_bar_result</item>
        <item name="android:numStars">5</item>
        <item name="android:stepSize">1</item>
        <item name="android:maxHeight">12dp</item>
        <item name="android:minHeight">12dp</item>
        <item name="android:isIndicator">false</item>
    </style>

    <style name="MyMiddleDialogStyle" parent="@android:style/Theme.Holo.Light.Dialog">
        <!-- 窗口背景色 -->
        <item name="android:windowBackground">@android:color/background_light</item>
        <!--是否有覆盖-->
        <item name="android:windowContentOverlay">@null</item>
        <!-- 浮于Activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- Dialog以外的区域模糊效果 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!--进出动画-->
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
    </style>
    <style name="centerDialogStyle">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>
    <!--dialog从底部弹出-->
    <style name="bottomDialogStyle">
        <item name="android:windowEnterAnimation">@anim/anim_bottom_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/anim_bottom_dialog_out</item>
    </style>
    <style name="Dialog_Fullscreen.Bottom">
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:windowAnimationStyle">@style/bottomDialogStyle</item>
    </style>

    <style name="Dialog_Fullscreen">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 背景是否变灰 -->
        <item name="android:windowAnimationStyle">@style/centerDialogStyle</item>
        <!-- 背景动画-->
        <item name="android:windowFrame">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:indeterminateOnly">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>




</resources>
